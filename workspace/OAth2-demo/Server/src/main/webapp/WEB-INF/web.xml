<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>auth</servlet-name>
    <servlet-class>com.hht.AuthServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>authLogin</servlet-name>
    <servlet-class>com.hht.AuthLoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>getToken</servlet-name>
    <servlet-class>com.hht.GetTokenServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>getUserInfo</servlet-name>
    <servlet-class>com.hht.GetUserInfoServlet</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>auth</servlet-name>
    <url-pattern>/auth</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>authLogin</servlet-name>
    <url-pattern>/authLogin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getToken</servlet-name>
    <url-pattern>/getToken</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getUserInfo</servlet-name>
    <url-pattern>/getUserInfo</url-pattern>
  </servlet-mapping>
</web-app>
